@model TufanOto.Models.LoginViewModel
@{
    ViewData["Title"] = "Admin Girişi";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh; background-image: url('/Images/Tamirhane.jpg'); background-size: cover;">
    <div style="position: absolute; top:0; left:0; width:100%; height:100%; background: rgba(0,0,0,0.6); z-index: 0;"></div>

    <div class="card shadow-lg border-0 p-4" style="width: 400px; z-index: 1; border-radius: 15px; background: rgba(255, 255, 255, 0.95);">
        <div class="card-body text-center">
            <h3 class="fw-bold text-dark mb-4"><i class="fas fa-user-shield text-warning"></i> Usta Girişi</h3>

            <form asp-action="Login" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 fw-bold"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
                    <label>Kullanıcı Adı</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
                    <label>Şifre</label>
                </div>

                <div class="form-check text-start mb-4">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Beni Hatırla
                    </label>
                </div>

                <button type="submit" class="btn btn-dark w-100 py-3 fw-bold rounded-pill">GİRİŞ YAP</button>
            </form>

            <a href="/" class="d-block mt-3 text-muted text-decoration-none small">← Siteye Dön</a>
        </div>
    </div>
</div>
