@model TufanOto.Models.Product

@{
    ViewData["Title"] = "Ürünü Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">

                <div class="card-header bg-danger text-white">
                    <h3 class="fw-bold mb-0"><i class="fas fa-trash-alt"></i> Ürünü Sil</h3>
                </div>

                <div class="card-body text-center p-4">
                    <h4 class="fw-bold">@Model.Name</h4>
                    <p class="text-muted">@Model.Description</p>

                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" width="180" class="rounded shadow-sm mb-4" />
                    }

                    <p class="text-danger fw-bold mb-3">Bu ürünü silmek istediğinize emin misiniz?</p>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg me-2">
                            <i class="fas fa-check"></i> Evet, Sil
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Vazgeç</a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
