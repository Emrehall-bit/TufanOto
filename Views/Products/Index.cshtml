@model IEnumerable<TufanOto.Models.Product>
@{
    ViewData["Title"] = "Ürün Vitrini";
}

<div class="position-relative text-center text-white mb-5"
     style="background-image: url('/Images/Tamirhane.jpg'); background-size: cover; background-position: center; padding: 100px 0;">
    <div style="background: rgba(0,0,0,0.6); position: absolute; top:0; left:0; width:100%; height:100%;"></div>

    <div class="position-relative z-1">
        <h1 class="display-3 fw-bold">Yedek Parça & Aksesuar</h1>
        <p class="lead">Aracınız için en kalitelisi.</p>

        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a class="btn btn-warning fw-bold" asp-action="Create">
                + Yeni Ürün Ekle
            </a>
        }
    </div>
</div>



<div class="container pb-5">

    <div class="swiper myProductSwiper p-4">
        <div class="swiper-wrapper">

            @if (!Model.Any())
            {
                <div class="col-12 text-center text-muted">
                    <h3>Henüz ürün eklenmemiş.</h3>
                </div>
            }
            else
            {
                @foreach (var urun in Model)
                {
                    <div class="swiper-slide">
                        <div class="card h-100 border-0 shadow-lg position-relative"
                             style="border-radius: 15px; overflow: hidden; transition: transform 0.3s;">

                            @* === ADMİN BUTONLARI – FOTO ÜSTÜ === *@
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <div class="position-absolute top-0 end-0 m-2 d-flex gap-2" style="z-index: 10;">
                                    <a asp-action="Edit" asp-route-id="@urun.Id"
                                       class="btn btn-sm btn-warning rounded-circle">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@urun.Id"
                                       class="btn btn-sm btn-danger rounded-circle">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            }

                            <div style="height: 250px; overflow: hidden; position: relative;">
                                <img src="@(string.IsNullOrEmpty(urun.ImagePath) ? "/Images/no-image.png" : urun.ImagePath)"
                                     alt="@urun.Name"
                                     style="width: 100%; height: 100%; object-fit: cover;">

                                @if (urun.IsFeatured)
                                {
                                    <div class="badge bg-warning text-dark position-absolute top-0 start-0 m-3 fw-bold">
                                        Fırsat
                                    </div>
                                }
                            </div>


                            @* === ALT BİLGİ KISMI === *@
                            <div class="card-body text-center bg-white">
                                <h5 class="fw-bold text-dark mb-1">@urun.Name</h5>
                                <p class="text-muted small mb-2">@urun.Description</p>
                                <h3 class="text-warning fw-bold mb-2">@urun.Price.ToString("N2") ₺</h3>

                                <p class="text-muted small mb-3">
                                    Stok: <b>@urun.Stock</b>
                                </p>

                                <a href="https://wa.me/905321234567?text=Merhaba, @urun.Name ürünü hakkında bilgi almak istiyorum. Fiyatı: @urun.Price ₺"
                                   target="_blank"
                                   class="btn btn-dark w-100 rounded-pill fw-bold">
                                    <i class="fab fa-whatsapp"></i> Sipariş Ver
                                </a>
                            </div>

                        </div>
                    </div>
                }
            }

        </div>

        <div class="swiper-pagination"></div>
        <div class="swiper-button-next text-warning"></div>
        <div class="swiper-button-prev text-warning"></div>
    </div>

</div>



<style>
    .swiper-slide {
        padding: 10px;
    }

    .card:hover {
        transform: translateY(-10px);
    }

    .btn-warning.rounded-circle,
    .btn-danger.rounded-circle {
        width: 35px;
        height: 35px;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>



<script>
    document.addEventListener("DOMContentLoaded", function () {
        var swiper = new Swiper(".myProductSwiper", {
            slidesPerView: 1,
            spaceBetween: 20,
            loop: true,
            autoplay: {
                delay: 2500,
                disableOnInteraction: false,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            breakpoints: {
                640: {
                    slidesPerView: 2,
                },
                1024: {
                    slidesPerView: 3,
                },
            },
        });
    });
</script>
