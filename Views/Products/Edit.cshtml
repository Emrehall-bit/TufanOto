@model TufanOto.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">

                <div class="card-header bg-warning text-dark">
                    <h3 class="fw-bold mb-0"><i class="fas fa-edit"></i> Ürünü Düzenle</h3>
                </div>

                <div class="card-body p-4">

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-check mb-3">
                            <input asp-for="IsFeatured" type="checkbox" class="form-check-input" />
                            <label class="form-check-label fw-bold">Fırsat Ürünü</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ürün Adı</label>
                            <input asp-for="Name" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Fiyat (TL)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Stok Adeti</label>
                            <input asp-for="Stock" type="number" class="form-control" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Mevcut Fotoğraf</label><br />

                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="@Model.ImagePath" width="150" class="rounded shadow-sm mb-3" />
                            }
                            else
                            {
                                <p class="text-muted">Fotoğraf yok</p>
                            }

                            <label class="form-label fw-bold mt-2">Yeni Fotoğraf Yükle</label>
                            <input type="file" name="file" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
