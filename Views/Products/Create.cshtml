@model TufanOto.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white">
                    <h3 class="fw-bold mb-0"><i class="fas fa-plus-circle"></i> Yeni Ürün Ekle</h3>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-check mb-3">
                            <input asp-for="IsFeatured" type="checkbox" class="form-check-input" />
                            <label class="form-check-label fw-bold">Fırsat Ürünü</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ürün Adı</label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Castrol 5W-30 Motor Yağı" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Fiyat (TL)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ürün özelliklerini yazınız..."></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Ürün Fotoğrafı</label>
                            <input type="file" name="file" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Kaydet ve Yayınla
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>