@{
    ViewData["Title"] = "İletişim";
}

<div class="bg-dark text-white py-5 text-center" style="background-image: url('/Images/Tamirhane.jpg'); background-size: cover; background-position: center;">
    <div class="container py-3" style="background: rgba(0,0,0,0.7); border-radius: 10px; display: inline-block;">
        <h1 class="display-4 fw-bold">Bize Ulaşın</h1>
        <p class="lead mb-0">Çayımızı içmeye bekleriz. Adresimiz ve telefon numaramız aşağıdadır.</p>
    </div>
</div>

<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4">

            <div class="col-lg-5">
                <div class="bg-white p-4 rounded shadow-sm h-100 border">
                    <h3 class="fw-bold mb-4 text-dark">İletişim Bilgileri</h3>

                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="fas fa-map-marker-alt fa-lg" style="color: #fd7e14;"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h5 class="fw-bold mb-1">Adresimiz</h5>
                            <p class="text-muted mb-0">
                                Erenler Modern Sanayi Sitesi,<br>
                                1234. Sokak No: 54,<br>
                                Erenler / SAKARYA
                            </p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0">
                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="fas fa-phone-alt fa-lg" style="color: #fd7e14;"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h5 class="fw-bold mb-1">Telefon</h5>
                            <p class="text-muted mb-0">0532 123 45 67</p>
                            <small class="text-success fw-bold"><i class="fab fa-whatsapp"></i> 7/24 WhatsApp Aktif</small>
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="fas fa-clock fa-lg" style="color: #fd7e14;"></i>
                            </div>
                        </div>
                        <div class="ms-3">
                            <h5 class="fw-bold mb-1">Çalışma Saatleri</h5>
                            <p class="text-muted mb-0">Pzt - Cmt: 08:30 - 19:00</p>
                            <p class="text-muted">Pazar: Kapalı</p>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-lg-7">
                <div class="bg-white p-2 rounded shadow-sm h-100 border" style="min-height: 400px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.9!2d30.39!3d40.76!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDDCsDQ1JzM2LjAiTiAzMMKwMjMnMjQuMCJF!5e0!3m2!1str!2str!4v1620000000000!5m2!1str!2str"
                            width="100%"
                            height="100%"
                            style="border:0; min-height: 400px; border-radius: 8px;"
                            allowfullscreen=""
                            loading="lazy">
                    </iframe>
                </div>
            </div>

        </div>
    </div>
</section>