@model IEnumerable<TufanOto.Models.CustomerRequest>

@{
    ViewData["Title"] = "Usta Paneli";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="fas fa-tools text-warning me-2"></i> Müşteri Talepleri</h2>
        <span class="badge bg-secondary">Toplam: @Model.Count() Başvuru</span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Tarih</th>
                            <th>Fotoğraf</th>
                            <th>Müşteri Bilgisi</th>
                            <th>Sorun</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                         
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>

                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImagePath))
                                    {
                                        <a href="@item.ImagePath" target="_blank">
                                            <img src="@item.ImagePath" class="rounded border" style="width: 80px; height: 60px; object-fit: cover;" />
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Yok</span>
                                    }
                                </td>

                                <td>
                                    <strong>@item.PhoneNumber</strong> <br />
                                    <small class="text-muted">@item.CarModel</small>
                                </td>

                                <td>
                                    <p class="mb-0 text-wrap" style="max-width: 300px;">@item.Description</p>
                                </td>

                                <td>
                                    @if (item.IsResolved)
                                    {
                                        <span class="badge bg-success">Bakıldı</span>
                                    }
                                    else
                                    {
                                    <td>
                                        @{
                                            // Numarayı temizle (boşlukları sil)
                                            string tel = item.PhoneNumber.Replace(" ", "").Replace("-", "").Replace("(", "").Replace(")", "");

                                            // Başında '0' varsa kaldır (532... kalsın)
                                            if (tel.StartsWith("0")) tel = tel.Substring(1);
                                        }

                                        <a href="https://wa.me/90@(tel)?text=Merhaba, Tufan Oto'dan yazıyorum. Gönderdiğiniz fotoğrafı inceledim."
                                           target="_blank"
                                           class="btn btn-success btn-sm text-white fw-bold">
                                            <i class="fab fa-whatsapp"></i> Cevap Yaz
                                        </a>
                                    </td>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>