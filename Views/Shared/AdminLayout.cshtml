<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Paneli - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background-color: #f5f5f5;
        }

        .admin-header {
            background: #212529;
            color: white;
            padding: 15px;
        }

            .admin-header a {
                color: #ffc107;
                font-weight: bold;
                text-decoration: none;
            }

        .admin-container {
            padding: 30px;
        }
    </style>
</head>

<body>

    <div class="admin-header d-flex justify-content-between">
        <h3 class="m-0">⚙️ Admin Paneli</h3>

        <div>
            <a asp-controller="Admin" asp-action="Index">Anasayfa</a> |
            <a asp-controller="Products" asp-action="Index">Ürünler</a> |
            <a asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
        </div>
    </div>

    <div class="admin-container">
        @RenderBody()
    </div>

</body>
</html>
